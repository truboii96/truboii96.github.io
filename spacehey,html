    <title>SpaceHey CSS Customizer</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 20px;
        }

        .container {
            width: 80%;
            margin: auto;
        }

        h1 {
            text-align: center;
            color: #333;
        }

        #cssInput {
            width: 100%;
            height: 200px;
            font-family: monospace;
            font-size: 14px;
            padding: 10px;
            margin-bottom: 20px;
        }

        .preview {
            background-color: #fff;
            padding: 20px;
            border: 1px solid #ccc;
            margin-bottom: 20px;
            overflow: hidden;
            border-radius: 8px;
        }

        .btn-container {
            display: flex;
            justify-content: center;
            gap: 10px;
        }

        button {
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            border: none;
            border-radius: 5px;
        }

        button.save {
            background-color: #4CAF50;
            color: white;
        }

        button.preview {
            background-color: #008CBA;
            color: white;
        }

        button.reset {
            background-color: #f44336;
            color: white;
        }

        .message {
            text-align: center;
            font-size: 18px;
            margin-top: 20px;
        }

    </style>
