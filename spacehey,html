<body>
    <div class="container">
        <h1>SpaceHey CSS Customizer</h1>
        <textarea id="cssInput" placeholder="Enter your custom CSS here..."></textarea>

        <div class="btn-container">
            <button class="preview" onclick="applyCSS()">Preview CSS</button>
            <button class="save" onclick="saveCSS()">Save CSS</button>
            <button class="reset" onclick="resetCSS()">Reset</button>
        </div>

        <div class="preview" id="cssPreview">
            <h2>Live Preview</h2>
            <p>This is where you'll see your changes live!</p>
        </div>

        <div id="message" class="message"></div>
    </div>

    <script>
        // Get elements
        const cssInput = document.getElementById('cssInput');
        const cssPreview = document.getElementById('cssPreview');
        const message = document.getElementById('message');

        // Apply CSS to preview
        function applyCSS() {
            const cssCode = cssInput.value;
            cssPreview.style = cssCode;  // Apply the custom CSS to the preview box
            message.textContent = 'Preview updated!';
            message.style.color = 'green';
        }

        // Save CSS (simulating the save action)
        function saveCSS() {
            const cssCode = cssInput.value;

            // Check if there's any CSS entered
            if (cssCode.trim() === '') {
                message.textContent = 'No CSS entered!';
                message.style.color = 'red';
                return;
            }

            // For now, we'll just alert the user (You can modify this to save to your server, if desired)
            const blob = new Blob([cssCode], { type: 'text/css' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = 'custom_spacehey.css';
            a.click();

            message.textContent = 'CSS saved! You can now upload it to your SpaceHey profile.';
            message.style.color = 'blue';
        }

        // Reset the preview and textarea
        function resetCSS() {
            cssInput.value = '';
            cssPreview.style = '';  // Reset the preview box style
            message.textContent = 'Customizer reset.';
            message.style.color = 'gray';
        }
    </script>
</body>
</html>
